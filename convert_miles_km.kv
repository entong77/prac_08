BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: text_input
            text: '34'
            multiline: False
            on_text: app.handle_calculate()
        BoxLayout:
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate()
    Label:
        id: user_output
        multiline: False
        text: app.message